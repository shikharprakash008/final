<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_contact"
    tools:context=".prob8">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Problem Statement 8"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/text2"
        android:layout_below="@+id/text"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Attendance Keeper"
        android:textStyle="bold"/>

    <TextView

        android:layout_width="match_parent"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_marginTop="50dp"
        android:text="A shopping store assistant that will help the customer around the store to purhcase items."
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="REGISTER"
        android:textColor="@color/black" />

</RelativeLayout>