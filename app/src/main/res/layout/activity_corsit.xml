<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Corsit">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/bg_contact"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp">

            <ImageView
                android:padding="10dp"
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="62dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="2dp"
                android:text="Corsit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            >


            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Corsit"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/text1"
                android:layout_below="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CORSIT is the premier robotics club of SIT, under the patronage of e-yantra cell of IIT Bombay working in the field of robotics to bring together like-minded individuals to share experience and have fun building robots. The club was established in year 2006 and since then it has organized various national level workshops as well as participated in various national level events. Our aim is to empower students with the possibility of getting their hands dirty and learning about robotics by practically doing it. It officially controls all the robotics activities carried out by SIT. Our Club members have actively participated in techfests all round the country including Techfest IIT Bombay, Kshitij IIT Kharagpur, Shastra IIT Madras, Pravega IISC among many others and have brought laurels to the club.

Our club is the only one to have our labs set-up in collaboration with e-yantra cell of IIT Bombay in which our members build robots and projects on diverse topics including Machine Learning, Computer Vision, IOT, Embedded Systems, Blockchain among others."

                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/text3"
                android:layout_below="@id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Activities"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:id="@+id/textView4"
                android:layout_below="@id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robotech"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/image1"

                android:layout_width="700dp"
                android:layout_height="250dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"

                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@mipmap/robo_tech">

            </ImageView>

            <TextView
                android:textAllCaps="true"
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Robocon"
                android:textColor="@color/black"

                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView

                android:id="@+id/image2"
                android:padding="10dp"

                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/text2"
                android:layout_marginTop="12dp"
                android:src="@mipmap/rc"
                android:layout_width="700dp"
                android:layout_height="250dp" />
            <TextView
                android:id="@+id/text5"
                android:text="Projects"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:layout_below="@+id/image2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView

                android:id="@+id/image4"
                android:padding="10dp"

                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/text5"
                android:layout_marginTop="12dp"
                android:src="@mipmap/proj"
                android:layout_width="700dp"
                android:layout_height="250dp" />
            <TextView
                android:id="@+id/text6"
                android:text="Workshop"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:layout_below="@+id/image4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView

                android:id="@+id/image3"
                android:padding="10dp"

                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/text6"
                android:layout_marginTop="12dp"
                android:src="@mipmap/six"
                android:layout_width="700dp"
                android:layout_height="250dp" />
            <TextView
                android:id="@+id/text7"
                android:text="competitions"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:layout_below="@+id/image3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView

                android:id="@+id/image5"
                android:padding="10dp"

                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/text7"
                android:layout_marginTop="12dp"
                android:src="@mipmap/comp"
                android:layout_width="700dp"
                android:layout_height="250dp" />
        </RelativeLayout>

    </LinearLayout>



</ScrollView>