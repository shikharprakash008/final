<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrossRoads">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/re"
            android:background="@drawable/bg_contact"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_height="100dp">
            <ImageView
                android:padding="10dp"
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="62dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginBottom="2dp"
                android:text="Cross Roads" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10sp"
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gear up for rumbling engines, flamboyant wireless cars and adrenaline packed races at the all new Cross - Roads . It's all about speed, control and accuracy, the bot that covers the track in the minimum time collecting the maximum points will be crowned the champion."
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/prob_name"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:text="Rules"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prob_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="Download Rule Book"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text2"
            android:text="Register:"
            android:layout_below="@+id/button"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please pay to this number 8310351715 through UPI
(Google Pay,PhonePE,BHIM,PAYTM)\n\n

Dont forget to take the screenshot after the payment.\n\n
After completing the payment process click the button below to complete the registration.
"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_below="@+id/text2"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="REGISTER"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>